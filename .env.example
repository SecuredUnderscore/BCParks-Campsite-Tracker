# Docker/Infrastructure Configuration
PORT=5000
WORKERS=4

# Default Admin Credentials (only used on first startup if no users exist)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin
# Set to 'true' to completely disable default admin creation
SKIP_DEFAULT_ADMIN=false

# Flask Application Security
# IMPORTANT: Generate a secure random key for production using:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
